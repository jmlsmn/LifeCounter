<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/threep_score_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    
		<TextView
		    android:id="@+id/txtOnePlayer"
		    android:layout_width="0dip"
		    android:layout_weight="1"
		    android:gravity="center_horizontal"
		    android:padding="0dp"
		    android:includeFontPadding="false"
		    android:textSize="175sp"
		    android:layout_column="0" />
		
		<TextView
		    android:id="@+id/txtTwoPlayer"
		    android:layout_width="0dip"
		    android:layout_weight="1"
		    android:gravity="center_horizontal"
		    android:includeFontPadding="false"
		    android:padding="0dp"
		    android:textSize="175sp"
		    android:layout_column="1" />
		
		<TextView
		    android:id="@+id/txtThreePlayer"
		    android:layout_width="0dip"
		    android:layout_weight="1"
		    android:gravity="center_horizontal"
		    android:includeFontPadding="false"
		    android:padding="0dp"
		    android:textSize="175sp"
		    android:layout_column="2" />
	</TableRow>
	
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="0dip"
        android:layout_weight="1" >
    
		<TextView
		    android:id="@+id/txtCommanderLifeOne"
		    android:layout_width="0dip"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:includeFontPadding="false"
		    android:gravity="center"
		    android:padding="0sp"
		    android:text="0"
		    android:textSize="75sp"
		    android:layout_column="0" />
		
		<TextView
		    android:id="@+id/txtCommanderLifeTwo"
		    android:layout_width="0dip"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:includeFontPadding="false"
		    android:gravity="center"
		    android:padding="0sp"
		    android:text="0"
		    android:textSize="75sp"
		    android:layout_column="1" />
		
		<TextView
		    android:id="@+id/txtCommanderLifeThree"
		    android:layout_width="0dip"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:includeFontPadding="false"
		    android:gravity="center"
		    android:padding="0sp"
		    android:text="0"
		    android:textSize="75sp"
		    android:layout_column="2" />
	</TableRow>
	
    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="0dip"
        android:layout_weight="1" >
		
        		
		<TextView
		    android:id="@+id/txtPoisonLifeOne"
		    android:layout_width="0dip"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:includeFontPadding="false"
		    android:gravity="center"
		    android:padding="0sp"
		    android:text="0"
		    android:textSize="75sp"
		    android:layout_column="0" />
		
		<TextView
		    android:id="@+id/txtPoisonLifeTwo"
		    android:layout_width="0dip"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:includeFontPadding="false"
		    android:gravity="center"
		    android:padding="0sp"
		    android:text="0"
		    android:textSize="75sp"
		    android:layout_column="1" />
		
		<TextView
		    android:id="@+id/txtPoisonLifeThree"
		    android:layout_width="0dip"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:includeFontPadding="false"
		    android:gravity="center"
		    android:padding="0sp"
		    android:text="0"
		    android:textSize="75sp"
		    android:layout_column="2" />
    </TableRow>
</TableLayout>