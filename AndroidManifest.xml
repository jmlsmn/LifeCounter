<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="LifeCounter.Main"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="14" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/customTheme" >
        
        <style name="customTheme" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">
            <item name="android:windowBackground">@drawable/bg</item>
        </style>
        "
        <activity
            android:name=".LifeCounterActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".GameSetupActivity"
            android:label="@string/title_activity_game_setup" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditPlayersActivity"
            android:label="@string/title_activity_edit_players" >
        </activity>
        <activity
            android:name=".EditProfilesActivity"
            android:label="@string/title_activity_edit_profiles" >
        </activity>
        <activity
            android:name=".MultiplayerLifeCounterActivity"
            android:label="@string/title_activity_multiplayer_life_counter"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>